    <div class="container mt-5">
        
        
        <h2 style="text-align: center;">ALL Users Details</h2>
        <table class="table mt-4" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">User Name</th>
                    
                    <th scope="col">Options</th>



                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr>

                    <td>{{this.name}}</td>
                    <td>{{this.userName}}</td>
                    
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm(`Are you want to delete {{this.Name}}`)">Delete</a>
                    </td>


                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
    <div class="container">
          <a href="/admin/add-user" class="btn btn-primary" style="float: right;">Add user</a>

    </div>
